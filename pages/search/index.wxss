.container-search{
  width: 100%;
  box-sizing: border-box;
}
.search-header{
  display: flex;
  padding: 32rpx;
  background-color: #fff;
  align-items: center;
}
.search-input{
  position: relative;
  width: 650rpx;
  height: 66rpx;
}
.van-icon{
    position: absolute !important;
    top: 16rpx;
    right:40rpx;
    z-index: 999;
}
.search-input input{
  border: 1rpx solid #e3e3e3;
  width: 89%;
  height: 100%;
  border-radius: 30rpx;
  padding-left: 60rpx;
}
.search-header image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}
.search-list{
  width: 100%;
}
.search-list-head{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-top:1px solid #e3e3e3;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.search-list-bottom{
   background-color: #f5f5f5;
   padding: 16rpx;
}
.search-bottm-item{
  width: 100%;
  display: flex;
}
.search-bottm-item image{
  width:220rpx;
  height: 220rpx;
}
.search-bottm-rigth{
  position: relative;
  width: 100%;
  padding-left:20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.bottm-right-text1{
   display: block;
   font-size: 32rpx;
   color: red;
}
.bottm-right-text2{
    font-size: 24rpx;
    color: #999999;
}
.gouwuche{
  position: absolute;
  right: 20rpx;
  top: 100rpx;
}
.active{
  color: red;
}